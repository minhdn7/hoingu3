<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoingu3.ui.activity.PlayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_margin="10dp"
            android:text="Câu hỏi 1, Câu hỏi 1, Câu hỏi 1, Câu hỏi 1, Câu hỏi 1, Câu hỏi 1, Câu hỏi 1, Câu hỏi 1,"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_voz_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_text_view_1"
                    android:gravity="center"
                    android:text="Số phao ngu 2"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_ans_a"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_text_view_2"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:text="Đáp án A"/>
            <Button
                android:id="@+id/bt_ans_b"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:background="@drawable/bg_text_view_2"
                android:gravity="center"
                android:text="Đáp án B"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_ans_c"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_text_view_2"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:text="Đáp án C"/>
            <Button
                android:id="@+id/bt_ans_d"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:background="@drawable/bg_text_view_2"
                android:gravity="center"
                android:text="Đáp án D"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
